@model  opr.Models.Section
@{
    ViewBag.Title = "EditView";
}

<h2>EditView</h2>

@using (Html.BeginForm())
{
    <div>
        <form>
            <label for="name">Section Name</label>
            @Html.HiddenFor(model => model.Id);
            @Html.TextBoxFor(model => model.Name, new { required = "required", @class = "form-control" })
            <label for="shortcode">Section Short Code</label>
            @Html.TextBoxFor(model => model.ShortCode, new { required = "required", @class = "form-control" })
            <label for="description">Description</label>
            @Html.TextBoxFor(model => model.Description, new { required = "required", @class = "form-control" })
            @*<label for="userid">User Id</label>*@
            @Html.HiddenFor(model => model.UserId, new { required = "required", @class = "form-control" })
            @*<label for="entrydate">Entry Date</label>*@
            @Html.HiddenFor(model => model.EntryDate, new { @class = "form-control" })
            @*<label for="modifiedby">Modified By</label>*@
            @Html.HiddenFor(model => model.ModifiedBy, new { required = "required", @class = "form-control" })
            @*<label for="modifieddate">Modified Date</label>*@
            @Html.HiddenFor(model => model.ModifiedDate, new {@class = "form-control" })
            <label for="isdeleted">Is Deleted</label>
            @*     @Html.CheckBoxFor(model => model.IsDeleted.Value, new { @class = "form-control" })*@
            @Html.CheckBox("IsDeleted", Model.IsDeleted.HasValue ? Model.IsDeleted : false)
            <label for="isactive">Is Active</label>
            @*@Html.CheckBoxFor(model => model.IsActive.Value, new { @class = "form-control" })*@
            @Html.CheckBox("IsActive", Model.IsActive.HasValue ? Model.IsActive : false)
            <br />
            <input type="submit" value="submit" class="btn-primary btn-sm" />
        </form>

    </div>

}

